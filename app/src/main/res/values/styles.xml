<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/secondary_text_dark</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_container_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/activity_home_header_text_size</item>
        <item name="android:paddingStart">@dimen/activity_home_header_padding_start</item>
        <item name="android:paddingEnd">@dimen/activity_home_header_padding_end</item>
    </style>

</resources>
