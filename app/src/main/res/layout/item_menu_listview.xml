<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/item_menu_width"
                android:layout_height="@dimen/item_menu_height"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/item_menu_im_icon"
        android:layout_width="@dimen/item_menu_icon_size"
        android:layout_height="@dimen/item_menu_icon_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/item_menu_icon_margin_top"
        android:src="@drawable/ic_menu_bottle"/>

    <TextView
        android:id="@+id/item_menu_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_menu_im_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/item_menu_tv_name_margin_top"
        android:text="Wine"
        android:textAllCaps="true"
        android:textSize="@dimen/item_menu_name_text_size"/>

</RelativeLayout>