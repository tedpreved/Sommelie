<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="@dimen/header_container_height">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/corner_radius_big"
                android:topRightRadius="@dimen/corner_radius_big"/>
            <solid android:color="@color/color_right_container_top_background"/>
        </shape>
    </item>
    <item android:top="@dimen/header_container_height">
        <shape android:shape="rectangle">
            <solid
                android:color="@android:color/white"/>
            <corners
                android:bottomLeftRadius="@dimen/corner_radius_big"
                android:bottomRightRadius="@dimen/corner_radius_big"/>
        </shape>
    </item>
</layer-list>